{
  "extends": "@instello/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-native",
    "checkJs": false,
    "moduleSuffixes": [".ios", ".android", ".native", ""]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "metro.config.js",
    "babel.config.js",
    "global.d.ts",
    "../../node_modules/mux-embed/dist/types/**/*.ts"
  ],
  "exclude": ["node_modules", "global.css"]
}
