{
  "name": "@instello/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./erp": {
      "types": "./dist/erp/index.d.ts",
      "default": "./src/erp/index.ts"
    },
    "./lms": {
      "types": "./dist/lms/index.d.ts",
      "default": "./src/lms/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push-erp": "pnpm with-env drizzle-kit push --config=./drizzle.config.erp.ts",
    "push-lms": "pnpm with-env drizzle-kit push --config=./drizzle.config.lms.ts",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@instello/eslint-config": "workspace:*",
    "@instello/prettier-config": "workspace:*",
    "@instello/tsconfig": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@instello/prettier-config",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "zod": "catalog:"
  }
}
